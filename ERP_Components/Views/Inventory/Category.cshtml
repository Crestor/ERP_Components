<div class="tab-buttons">
    <button class="tab-button" onclick="showSection('product')">
        Add Product Category
    </button>
    <button class="tab-button" onclick="showSection('material')">
        Add Material Category
    </button>
</div>




<div class="container" id="product" style="display: block;">


    <div style="display:flex; justify-content:center; align-items:center;margin:auto">
        <h3>Add Product Category</h3>
    </div>
    <form method="post" asp-action="AddCategory" asp-controller="Inventory">
        <div class="form-section">
            <h3>Category Info</h3>
            <div class="form-row">

              
                <label class="required">Category Name</label>
                <input type="text" name="categoryName" placeholder="Enter Category Name" />
                <input type="hidden" name="formType" value="product" />


                <label class="required">Category Code</label>
                <input type="text" name="categoryCode" placeholder="Enter Category code" />
              
            </div>
            <div class="form-row">

            

                <label class="required">Category Description</label>
                <textarea name="categoryDescription" style="width: 33%;" placeholder="Enter product Description"></textarea>
                <label class="required">Is Active</label>
                <select name="isActive" required>
                    <option selected disabled>select</option>
                    <option>yes</option>
                    <option>NO</option>
                </select>

            </div>
           
        </div>
            <div class="button-container">
                <button type="submit">Submit</button>
            </div>
    </form>
</div>






<div class="container" id="material" style="display: none;">

    <div style="display:flex; justify-content:center; align-items:center;margin:auto">
    <h3>Add Material Category</h3>
    </div>
    <form method="post" asp-action="AddCategory" asp-controller="Inventory">
        <div class="form-section">
            <h3>Category Info</h3>
            <div class="form-row">


                <label class="required">Category Name</label>
                <input type="text" name="categoryName" placeholder="Enter Category Name" />
                <input type="hidden" name="formType" value="material" />

                <label class="required">Category Code</label>
                <input type="text" name="categoryCode" placeholder="Enter Category code" />

            </div>
            <div class="form-row">



                <label class="required">Category Description</label>
                <textarea name="categoryDescription" style="width: 33%;" placeholder="Enter product Description"></textarea>
                <label class="required">Is Active</label>
                <select name="isActive" required>
                    <option selected disabled>select</option>
                    <option>yes</option>
                    <option>NO</option>
                </select>

            </div>

        </div>
        <div class="button-container">
            <button type="submit">Submit</button>
        </div>
    </form>
</div>


<script>

     function showSection(sectionId) {
        document.querySelectorAll('.container').forEach(el => el.style.display = 'none');
        document.getElementById(sectionId).style.display = 'block';
        clearCheckboxes();
    }
</script>