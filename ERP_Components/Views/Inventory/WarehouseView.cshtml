@using ERP_Component_DAL.Models;


@model List<Warehouse>

<link rel="stylesheet" href="~/css/Product.css">



<div class="header1">
    <h4>View Warehouse</h4>
</div>
<div class="table-container">



    <div class="Table">
        <table>
            <thead>
                <tr>
                    <th>S.No.</th>
                    <th>Warehouse Name</th>
            
                    <th>Address line 1</th>
                    <th>Address line 2</th>
                    <th>State</th>
                    <th>District</th>
                    <th>Area</th>
                    <th>Pincode</th>
                    <th>Created On</th>
                    <th>Action</th>

                </tr>
            </thead>
            <tbody id="geeks">


                @for (var i = 0; i < Model.Count; i++)
                {

                    var x = Model[i];
                    var index = i + 1;

                    <tr>
                        <td>@index</td>
                        <td>@x.warehouseName</td>
                     
                        <td>@x.Address1</td>
                        <td>@x.Address2</td>
                        <td>@x.State</td>
                        <td>@x.District</td>
                        <td>@x.Area</td>
                        <td>@x.PostalCode</td>
                        <td>@x.CreatedOn.ToShortDateString()</td>

                        <td>
                            <div class="actions">

                                <button onclick="location.href='@Url.Action("EditWarehouse", "Inventory", new { addressId = x.addressId }, null)'"><i class="fas fa-edit"></i></button>
                                <button onclick="openRejectModal('@x.addressId')"><i class="fas fa-trash"></i></button>

                               
                            </div>
                        </td>

                    </tr>
                }
            </tbody>



        </table>
    </div>

</div>

<script>
    function openRejectModal(addressId) {

          console.log(addressId);
          const id =addressId;
          Swal.fire({
            title: "Are you sure?",
            text: "You won't be able to revert this!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Yes, delete it!"
          }).then((result) => {
            if (result.isConfirmed) {
              if (addressId) {

                let url = `/Inventory/DeleteWarehouse?addressId=${id}`;

                console.log('Redirecting to', url);
                window.location.href = url;
              }
            }
          });

        }
</script>
