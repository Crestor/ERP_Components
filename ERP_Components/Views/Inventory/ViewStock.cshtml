@{
    ViewBag.Title = "Stock List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@* @model List<Stock> *@
<link href="~/css/Product.css" rel="stylesheet" />


<div class="product-section">
    <h2>Stock Inventory</h2>

    @if (TempData["Message"] != null)
    {
        <p style="color: green;">@TempData["Message"]</p>
    }

    <table class="product-table">
        <thead>
            <tr>
                <th>Stock ID</th>
                <th>Product Name</th>
                <th>Warehouse Name</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Last Updated</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var stock in Model)
            {
                <tr>
                    <td>@stock.StockId</td>
                    <td>@stock.ProductName</td>
                    <td>@stock.WarehouseName</td>
                    <td>
                        <form asp-action="UpdateStock" asp-controller="Home" method="post" class="action-buttons">
                            <input type="hidden" name="StockId" value="@stock.StockId" />
                            <input type="hidden" name="ProductId" value="@stock.ProductId" />
                            <input type="hidden" name="WarehouseId" value="@stock.WarehouseId" />
                            <input type="number" name="Quantity" value="@stock.Quantity" required />
                            <button type="submit" class="btn btn-update">Update</button>
                        </form>
                    </td>
                    <td>@stock.UnitPrice</td>
                    <td>@stock.LastUpdated.ToString("yyyy-MM-dd")</td>
                    <td class="action-buttons">
                        <form asp-action="DeleteStock" asp-controller="Home" method="post" onsubmit="return confirm('Are you sure you want to delete this stock?');">
                            <input type="hidden" name="id" value="@stock.StockId" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
