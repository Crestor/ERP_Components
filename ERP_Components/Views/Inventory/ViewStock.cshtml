                    <td>2024-12-01</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<script>
    function showSection(sectionId) {
           document.querySelectorAll('.vendor-section > div').forEach(el => el.style.display = 'none');
           document.getElementById(sectionId).style.display = 'block';
       }
</script>