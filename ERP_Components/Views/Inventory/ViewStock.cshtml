@using ERP_Component_DAL.Models;


@{
    ViewBag.Title = "Stock List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<Stock>
<link href="~/css/Product.css" rel="stylesheet" />
<div class="header1">
    <h4>View Stock</h4>
</div>



<div class="header1">
    <h4>View SubCategory</h4>
</div>

<div class="tab-buttons">
    <button class="tab-button" onclick="showSection('product')">
        View Product Stock
    </button>
    <button class="tab-button" onclick="getName(); showSection('material');">
        View Material Stock
    </button>
</div>





<div class="table-container" id="product" style="display:block">

    <div style="display:flex;justify-content:center;text-align:center">
        <h4>Product StockIn</h4>

    </div>

    <div class="Table">
        <table class="product-table" style="margin:0px 15px">
            <thead>
                <tr>
                    <th>Sno.</th>
                    <th>Product Name</th>
                    <th>Quantity</th>
                    <th>Cost Price</th>
                    <th>Arrival Date</th>
                    <th>Expiry Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="geeks">


                @for (var i = 0; i < Model.Count; i++)
                {

                    var x = Model[i];
                    var index = i + 1;

                    <tr id="row-@x.stockId">
                        <td>@index</td>
                        <td>@x.itemName</td>


                        <td>@x.quantity</td>
                        <td>@x.costPrice</td>

                        <td>@x.arrival.ToShortDateString()</td>

                        <td>@x.expiry.ToShortDateString()</td>

                        <td>
                            <div class="actions">

                                <button onclick="location.href='@Url.Action("EditStock", "Inventory", new { stockId = @x.stockId }, null)'"><i class="fas fa-edit"></i></button>
                                <button onclick="openRejectModal('@x.stockId')"><i class="fas fa-trash"></i></button>

                            </div>
                        </td>

                    </tr>
                }
            </tbody>

        </table>
    </div>

</div>

<div class="table-container" id="material" style="display: none;">

    <div style="display:flex;justify-content:center;text-align:center">
        <h4> Material StockIn</h4>

    </div>

    <div class="Table">
        <table class="material-table" style="margin:0px 15px">
            <thead>
                <tr>
                    <th>Sno.</th>
                    <th>Product Name</th>
                    <th>Quantity</th>
                    <th>Cost Price</th>
                    <th>Arrival Date</th>
                    <th>Expiry Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="geeks">


                @for (var i = 0; i < Model.Count; i++)
                {

                    var x = Model[i];
                    var index = i + 1;

                    <tr id="row-@x.stockId">
                        <td>@index</td>
                        <td>@x.itemName</td>


                        <td>@x.quantity</td>
                        <td>@x.costPrice</td>

                        <td>@x.arrival.ToShortDateString()</td>

                        <td>@x.expiry.ToShortDateString()</td>

                        <td>
                            <div class="actions">

                                <button onclick="location.href='@Url.Action("EditStock", "Inventory", new { stockId = @x.stockId }, null)'"><i class="fas fa-edit"></i></button>
                                <button onclick="openRejectModal('@x.stockId')"><i class="fas fa-trash"></i></button>



                            </div>
                        </td>

                    </tr>
                }
            </tbody>

        </table>
    </div>

</div>

<script>

     function showSection(sectionId) {
        document.querySelectorAll('.table-container').forEach(el => el.style.display = 'none');
        document.getElementById(sectionId).style.display = 'block';

    }
</script>




<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>

        function getName() {
        $.ajax({
            type: "GET",
            url: "/Inventory/ViewMaterialStock",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (response) {
                let tbody = $("#material #tbody");
                tbody.empty();

                if (response.length > 0) {
                    response.forEach((item, index) => {
                        tbody.append(`
                            <tr>
                                <td>${index + 1}</td>
                                <td>${item.itemName}</td>
                                <td>${item.quantity}</td>
                                <td>${item.costPrice}</td>
                                   <td>${new Date(item.arrival).toLocaleDateString()}</td>
                                <td>${new Date(item.expiry).toLocaleDateString()}</td>
                                <td>
                                    <div class="actions">
                                        <button onclick="location.href='/Inventory/EditStock?stockId=${item.stockId}'">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button onclick="location.href='/Inventory/DeleteStock?stockId=${item.stockId}'">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        `);
                    });
                } else {
                    tbody.append('<tr><td colspan="7">No Material Categories Found</td></tr>');
                }
            },
            error: function (xhr, status, error) {
                console.error("AJAX Error:", error);
                alert("Error fetching material categories.");
            }
        });
    }
</script>



<script>

    function openRejectModal(stockId) {

          console.log(stockId);
          const id = stockId;
          Swal.fire({
            title: "Are you sure?",
            text: "You won't be able to revert this!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Yes, delete it!"
          }).then((result) => {
            if (result.isConfirmed) {
              if (stockId) {

                let url = `/Inventory/DeleteStock?stockId=${id}`;

                console.log('Redirecting to', url);
                window.location.href = url;
              }
            }
          });

        }
</script>

