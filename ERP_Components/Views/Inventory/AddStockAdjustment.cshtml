@model List<StockAdjustment>

@{
    ViewBag.Title = "Add Stock Adjustment";
}

<link href="~/css/Inventory.css" rel="stylesheet" />

<h2>Add Stock Adjustment</h2>

<form asp-action="AddStockAdjustment" asp-controller="Home" method="post">
  

    <div class="form-group mb-3">
        <select name="ProductId" required>
            <option value="">-- Select Product --</option>
         
            @foreach (var product in ViewBag.ProductList)
            {

                <option value="@product.ProductId">@product.ProductName</option>
            }
        </select>
    </div>

    <div class="form-group mb-3">

        <select name="WarehouseId" required>
            <option value="">-- Select Warehouse --</option>
            @foreach (var warehouse in ViewBag.WarehouseList)
            {
                <option value="@warehouse.WarehouseId">@warehouse.WarehouseName</option>
            }
        </select>

    </div>

    <div class="form-group mb-3">


        <input type="number" name="QuantityChange" placeholder="Quantity" required />
    </div>

    <div class="form-group mb-3">
        <textarea name="Reason" placeholder="Reason" required rows="5" cols="60"></textarea>
    </div>


    <button type="submit" class="btn btn-primary mt-2">Submit Adjustment</button>
    <a asp-action="StockAdjustment" asp-controller="Home" class="btn btn-secondary mt-2">Back to Adjustments</a>
</form>
