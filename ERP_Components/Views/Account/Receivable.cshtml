@using ERP_Component_DAL.Models

@{
    ViewBag.Title = "Receivable";
    Layout = "~/Views/Shared/_LayoutINV.cshtml";
}
@* <h2 style="  text-shadow: 1px 5px 5px grey;color:#138496"> Receivable</h2> *@

<link rel="stylesheet" href="~/css/Product.css" />
@model List<ReceivePayment>

<div class="table">
    <table>
        <thead>
            <tr>
                <th>S.NO</th>
                <th>Customer Name</th>
                <th>Amount</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>



            @for (var i = 0; i < Model.Count; i++)
            {
                var x = Model[i];
                var index = i + 1;

                <tr>



                    <td>@index</td>
                 <td>@x.CustomerName</td>
                 <td>@x.AdvanceAmount</td>
                 <td>
                        <button onclick="location.href='@Url.Action("ReceivePayment", "Account",new{CustomerID = x.CustomerID})'">Pay</button>

                 </td>


                </tr>
            }
        </tbody>
    </table>
</div>