        }
    }
</script>
<script>
    function showSection(clickedText, sectionId) {
        // Hide all sections
        document.querySelectorAll('.form-section').forEach(section => {
            section.classList.remove('animate-show');
            section.style.display = 'none';
        });

        // Show all headers again
        document.querySelectorAll('.section-toggle').forEach(span => {
            span.style.display = 'inline';
        });

        // Hide the clicked header
        clickedText.style.display = 'none';

        const section = document.getElementById(sectionId);

        // Move the section right after the clicked header
        clickedText.insertAdjacentElement('afterend', section);

        // Show and animate
        section.style.display = 'block';
        void section.offsetWidth; // trigger reflow
        section.classList.add('animate-show');
    }

    // Automatically show "Basic Details" on page load
    window.onload = function () {
        const basicToggle = document.querySelector('[onclick*="BasicDetails"]');
        if (basicToggle) {
            showSection(basicToggle, 'BasicDetails');
        }
    };
</script>








