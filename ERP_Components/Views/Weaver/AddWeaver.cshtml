@using ERP_Component_DAL.Models;
@{
    ViewBag.Title = "Add Weaver";
    Layout = "~/Views/Shared/_LayoutINV.cshtml";
}
<link rel="stylesheet" href="~/css/Product.css" />

<form asp-action="AddWeaverDetails" asp-controller="Weaver" method="post" enctype="multipart/form-data">
    <div class="form-section">
        <h3>Add Weaver</h3>
        <div class="form-row">
            <label class="required" for="WeaverName">Weaver Name</label>
            <input type="text" name="WeaverName" id="WeaverName" required />
            <label class="required" for="firm">Firm Name</label>
            <input type="text" name="firm" id="firm" required />
        </div>
        <div class="form-row">
            <label class="required" for="ContactNumber">Contact Number</label>
            <input type="text" name="ContactNumber" id="ContactNumber" required />
            <label class="required" for="Email">Email</label>
            <input type="email" name="Email" id="Email" required />
        </div>
        <div class="form-row">
            <label class="required" for="Address">Address</label>
            <input type="text" name="Address" id="Address" required />
            <label class="required" for="City">City</label>
            <input type="text" name="City" id="City" required />
        </div>
        <div class="form-row">
            <label class="required" for="District">District</label>
            <input type="text" name="District" id="District" required />
            <label class="required" for="State">State</label>
            <input type="text" name="State" id="State" required />
        </div>
        <div class="form-row">
            <label class="required" for="Pincode">Pincode</label>
            <input type="text" name="Pincode" id="Pincode" required />
            <label class="required" for="Country">Country</label>
            <input type="text" name="Country" id="Country" required />
        </div>
        <div class="form-row">
            <label class="required" for="AadharNumber">Aadhar Number</label>
            <input type="text" name="AadharNumber" id="AadharNumber" required />
            <label class="required" for="PANNumber">PAN Number</label>
            <input type="text" name="PANNumber" id="PANNumber" required />
        </div>
        <div class="form-row">
            <label class="required" for="docpancard">Photo of PAN:</label>
            <input type="file" name="DocPANCard" id="docpancard" accept="image/*" required />
            <label class="required" for="docaadhar">Photo of Aadhar:</label>
            <input type="file" name="DocAadhar" id="docaadhar" accept="image/*" required />
       </div>
        <div class="button">
            <button type="submit">Add Weaver</button>
        </div>
    </div>
</form>
