@using ERP_Component_DAL.Models;
@{
    ViewBag.Title = "View Bill Of Material";
    Layout = "~/Views/Shared/_LayoutINV.cshtml";
}
<link rel="stylesheet" href="~/css/Product.css" />

@model List<BOM>
<div class="row row-cols-1 row-cols-md-3 g-4 p-5">
    @for (int i = 0; i <Model.Count; i++)
    {
        var v = Model[i];
        <div class="col mt-0 position-relative">
            <div class="card vendor-card" style="width: 18rem; cursor: pointer;">
                    <p>@v.</p>
                <div class="card-body position-relative z-1">
                    <p class="card-text">Material <span>Quantity</span></p>
                    @for (int j = 0; j < v.materials.Count; j++)
                    {
                        var item = v.materials[j];
                        <p class="card-text">@item.MatrialID: <span>@item.Quantity</span></p>
                        @* <p class="card-text">Unit: <span>@item.</span></p> *@
                    })
                </div>
            </div>
        </div>
    }
</div>