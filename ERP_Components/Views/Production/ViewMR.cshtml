@using ERP_Component_DAL.Models

<link rel="stylesheet" href="~/css/Product.css" />
@{
	ViewBag.Title = "Material Requisition";
	Layout = "~/Views/Shared/_LayoutINV.cshtml";
}
 @model List<Production>
<div class="table">
	<table>
		<thead>
			<tr>
				<th>S.No.</th>
				<th>Date</th>
				<th>Req. Series</th>
				<th>Description</th>
				<th>Actions</th>
			</tr>
		</thead>



		<tbody>

			@for (var i = 0; i < Model.Count; i++)
			{
				var x = Model[i];
				var index = i + 1;

				<tr>
					<td>@index</td>
					<td>@x.createdAt.ToShortDateString()</td>
					<td>@x.RequisitionSeries</td>
					<td>@x.description</td>
					<td>
						<div class="table-button">

							<button class=".btn-sm2" onclick="location.href='@Url.Action("AllocateToWeaver","Production", new{requisitionId = x.RequisitionID}, null)'">View</button>
						</div>

					</td>
				</tr>
			}
		</tbody>
	</table>
</div>@*
