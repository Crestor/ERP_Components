<!-- Font Awesome for Icons -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

<div class="dashboard-container">

    <!-- Left Section -->
    <div class="left-section">
        <div class="overview-card">
            <h3><i class="fas fa-chart-line icon"></i>Sales Overview</h3>
            <div class="overview-content">
                <div class="stat"><strong>₹832</strong><br>Sales</div>
                <div class="stat"><strong>₹18,300</strong><br>Revenue</div>
                <div class="stat"><strong>₹868</strong><br>Profit</div>
                <div class="stat"><strong>₹17,432</strong><br>Cost</div>
            </div>
        </div>

        <div class="overview-card">
            <h3><i class="fas fa-shopping-cart icon"></i>Purchase Overview</h3>
            <div class="overview-content">
                <div class="stat"><strong>82</strong><br>Purchase</div>
                <div class="stat"><strong>₹13,573</strong><br>Cost</div>
                <div class="stat"><strong>5</strong><br>Cancelled</div>
                <div class="stat"><strong>₹17,432</strong><br>Return</div>
            </div>
        </div>

        <div class="overview-card">
            <h3><i class="fas fa-chart-bar icon"></i>Sales vs Purchase Comparison</h3>
            <canvas id="salesPurchaseChart"></canvas>
        </div>
    </div>

    <!-- Right Section -->
    <div class="right-section">
        <div class="summary-card">
            <h4><i class="fas fa-boxes icon"></i>Inventory Summary</h4>
            <canvas id="inventoryChart"></canvas>
        </div>

        <div class="summary-card">
            <h4><i class="fas fa-laptop icon"></i>Product Summary</h4>
            <canvas id="productChart"></canvas>
        </div>

        <div class="summary-card">
            <h4><i class="fas fa-clipboard-list icon"></i>Order Summary</h4>
            <canvas id="orderChart"></canvas>
        </div>
    </div>

</div>

<!-- Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Sales vs Purchase
    new Chart(document.getElementById('salesPurchaseChart'), {
      type: 'bar',
      data: {
        labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
        datasets: [
          {
            label: 'Sales',
            backgroundColor: '#0f4c5c',
            data: [120000, 150000, 170000, 140000, 180000, 200000]
          },
          {
            label: 'Purchase',
            backgroundColor: '#3b8a9e',
            data: [90000, 110000, 130000, 120000, 140000, 160000]
          }
        ]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        scales: {
          y: {
            beginAtZero: true,
            ticks: { color: '#000' },
            grid: { color: '#ccc' }
          },
          x: {
            ticks: { color: '#000' },
            grid: { color: '#eee' }
          }
        },
        plugins: {
          legend: {
            labels: { color: '#000', font: { weight: 'bold' } }
          }
        }
      }
    });

    // Inventory Chart (Pie)
    new Chart(document.getElementById('inventoryChart'), {
      type: 'pie',
      data: {
        labels: ['In Stock', 'Low Stock', 'Out of Stock'],
        datasets: [{
          data: [70, 20, 10],
          backgroundColor: ['#138496', '#0f4c5c', '#dc3545']
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: { labels: { color: '#000' } }
        }
      }
    });

    // Product Chart (Doughnut)
    new Chart(document.getElementById('productChart'), {
      type: 'doughnut',
      data: {
        labels: ['New', 'Available', 'Out of Stock'],
        datasets: [{
          data: [15, 200, 15],
          backgroundColor: ['#17a2b8', '#0f4c5c', '#ffc107']
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: { labels: { color: '#000' } }
        }
      }
    });

    // Order Chart (Bar)
    new Chart(document.getElementById('orderChart'), {
      type: 'bar',
      data: {
        labels: ['Completed', 'Pending', 'Cancelled'],
        datasets: [{
          label: 'Orders',
          data: [460, 25, 27],
          backgroundColor: ['#28a745', '#ffc107', '#dc3545']
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        scales: {
          y: {
            beginAtZero: true,
            ticks: { color: '#000' },
            grid: { color: '#ddd' }
          },
          x: {
            ticks: { color: '#000' },
            grid: { color: '#eee' }
          }
        },
        plugins: {
          legend: { labels: { color: '#000' } }
        }
      }
    });
</script>

