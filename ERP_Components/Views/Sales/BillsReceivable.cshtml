 <script>
    function showSection(section) {
        const sales = document.getElementById('salesSection');
        const credit = document.getElementById('creditSection');
        const debit = document.getElementById('debitSection');
        if (section === 'sales') {
            sales.style.display = 'block';
            credit.style.display = 'none';
            debit.style.display = 'none';
        } else if(section ==='credit'){
            credit.style.display = 'block';
            sales.style.display = 'none';
             debit.style.display = 'none';
        }else{
               credit.style.display = 'none';
            sales.style.display = 'none';
             debit.style.display = 'block';
        }
    }

    // Default view is Basic Section
    window.onload = function () {
        showSection('sales');
    };
</script> 