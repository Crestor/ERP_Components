<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@((ViewData["Title"] ?? "Admin Dashboard") + " - Erp")</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="border-right text-light" style="background-color:#a14040; min-height: 100vh;" id="sidebar-wrapper">
            <div class="sidebar-heading">Inventory Management</div>
            <div class="list-group list-group-flush">
                @* <!-- Users --> *@
                @* <a href="#" class="list-group-item list-group-item-action" style="background-color:#a14040; color:white;"> *@
                @*     <i class="fas fa-users me-2"></i> Users *@
                @* </a> *@

                <!-- Inventory Dashboard -->
                <a href="@Url.Action("InventoryDashboard", "Inventory")" class="list-group-item list-group-item-action" style="background-color:#a14040; color:white;">
                    <i class="fas fa-tachometer-alt me-2"></i> Inventory Dashboard
                </a>

                
                <a href="@Url.Action("Warehouses", "Inventory")" class="list-group-item list-group-item-action" style="background-color:#a14040; color:white;">
                    <i class="fas fa-warehouse me-2"></i> Warehouses
                </a>

                <!-- Inventory -->
                <a href="@Url.Action("Inventory", "Inventory")" class="list-group-item list-group-item-action" style="background-color:#a14040; color:white;">
                    <i class="fas fa-boxes me-2"></i> Inventory
                </a>

                <!-- Products -->
                <a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center"
                   data-bs-toggle="collapse"
                   href="#productDropdown"
                   role="button"
                   aria-expanded="false"
                   aria-controls="productDropdown"
                   style="background-color:#a14040; color:white;">
                    <span><i class="fas fa-box-open me-2"></i> Products</span>
                    <i class="fas fa-chevron-down"></i>
                </a>
                <div class="collapse" id="productDropdown">
                    <a href="@Url.Action("Product", "Inventory")" class="list-group-item list-group-item-action ps-5" style="background-color:#c34949; color:white;">
                        <i class="fas fa-plus-circle me-2"></i> Add Products
                    </a>
                    <a href="@Url.Action("ViewProduct", "Inventory")" class="list-group-item list-group-item-action ps-5" style="background-color:#c34949; color:white;">
                        <i class="fas fa-eye me-2"></i> View Products
                    </a>
                </div>

                <!-- Stocks -->
                <a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center"
                   data-bs-toggle="collapse"
                   href="#stockDropdown"
                   role="button"
                   aria-expanded="false"
                   aria-controls="stockDropdown"
                   style="background-color:#a14040; color:white;">
                    <span> <i class="fa-solid fa-boxes-stacked"></i>   Stocks</span>
                    <i class="fas fa-chevron-down"></i>
                </a>
                <div class="collapse" id="stockDropdown">
                    <a href="@Url.Action("ViewStock", "Inventory")" class="list-group-item list-group-item-action ps-5" style="background-color:#c34949; color:white;">
                        <i class="fas fa-eye me-2"></i> View Stock
                    </a>
                    <a href="@Url.Action("AddStock", "Inventory")" class="list-group-item list-group-item-action ps-5" style="background-color:#c34949; color:white;">
                        <i class="fas fa-plus-square me-2"></i> Add Stock
                    </a>
                </div>

                <!-- Stock Adjustment -->
                <a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center"
                   data-bs-toggle="collapse"
                   href="#adjustmentDropdown"
                   role="button"
                   aria-expanded="false"
                   aria-controls="adjustmentDropdown"
                   style="background-color:#a14040; color:white;">
                    <span><i class="fas fa-sliders-h me-2"></i> Stock Adjustment</span>
                    <i class="fas fa-chevron-down"></i>
                </a>
                <div class="collapse" id="adjustmentDropdown">
                    <a href="@Url.Action("StockAdjustment", "Inventory")" class="list-group-item list-group-item-action ps-5" style="background-color:#c34949; color:white;">
                        <i class="fas fa-edit me-2"></i> Stock Adjustment
                    </a>
                    <a href="@Url.Action("AddStockAdjustment", "Inventory")" class="list-group-item list-group-item-action ps-5" style="background-color:#c34949; color:white;">
                        <i class="fas fa-plus-circle me-2"></i> Add Adjustment
                    </a>
                </div>

                <!-- Stock Transfer -->
                <a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center"
                   data-bs-toggle="collapse"
                   href="#transferDropdown"
                   role="button"
                   aria-expanded="false"
                   aria-controls="transferDropdown"
                   style="background-color:#a14040; color:white;">
                    <span><i class="fas fa-truck-moving me-2"></i> Stock Transfer</span>
                    <i class="fas fa-chevron-down"></i>
                </a>
                <div class="collapse" id="transferDropdown">
                    <a href="@Url.Action("StockTransfer", "Inventory")" class="list-group-item list-group-item-action ps-5" style="background-color:#c34949; color:white;">
                        <i class="fas fa-random me-2"></i> Stock Transfer
                    </a>
                    <a href="@Url.Action("AddStockTransfer", "Inventory")" class="list-group-item list-group-item-action ps-5" style="background-color:#c34949; color:white;">
                        <i class="fas fa-plus me-2"></i> Add Transfer
                    </a>
                </div>



                <!-- Logout -->
                <a href="@Url.Action("Index", "Home")" class="list-group-item list-group-item-action" style="background-color:#a14040; color:white;">
                    <i class="fas fa-sign-out-alt me-2"></i> Logout
                </a>


            </div>
        </div>

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg border-bottom" style="background-color:#a14040;">
                <div class="container-fluid">
                    <button class="btn btn-light" id="menu-toggle">
                        <i class="fa-duotone fa-solid fa-bars"></i>
                    </button>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                            data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ms-auto mt-2 mt-lg-0">
                            <li>
                                <a href="@Url.Action("InventoryDashboard", "Inventory")" class="list-group-item list-group-item-action" style="background-color:#a14040; color:white;">
                                    <i class="fas fa-home me-2"></i>
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Warehouses", "Inventory")" class="list-group-item list-group-item-action" style="background-color:#a14040; color:white;">
                                <i class="fas fa-warehouse me-2"></i> 
                            </a>
                            </li>
                            @* <li class="nav-item dropdown"> *@
                            @*     <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdown" role="button" *@
                            @*        data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> *@
                            @*         Dropdown *@
                            @*     </a> *@
                                @* <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown"> *@
                                @*     <a class="dropdown-item" href="#">Action</a> *@
                                @*     <a class="dropdown-item" href="#">Another action</a> *@
                                @*     <div class="dropdown-divider"></div> *@
                                @*     <a class="dropdown-item" href="#">Something else here</a> *@
                                @* </div> *@
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

            <!-- Razor Body Section -->
            <div class="container mt-4">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <!-- Sidebar Toggle Script -->
  
</body>
</html>
